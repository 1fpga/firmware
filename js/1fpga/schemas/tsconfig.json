{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "es2016",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/"],
  "exclude": ["**/__tests__"]
}
