{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://1fpga.cloud/schemas/cores.json",
  "type": "object",
  "additionalProperties": {
    "$ref": "#/definitions/core"
  },
  "definitions": {
    "core": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the core",
          "type": "string"
        },
        "version": {
          "description": "Version of the core",
          "type": "string"
        },
        "links": {
          "$ref": "defs.json#/definitions/links"
        },
        "releases": {
          "description": "List of releases for the core",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "files": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "date": {
                "type": "string"
              }
            }
          }
        },
        "systemName": {
          "description": "The shortname for the system the core supports. Can support multiple.",
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        }
      },
      "required": [
        "uniqueName",
        "name",
        "version",
        "downloadUrl",
        "systemName"
      ]
    }
  }
}
