{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://1fpga.cloud/schemas/games_db.json",
  "type": "object",
  "properties": {
    "header": {
      "$id": "header",
      "description": "Header information of the game database",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string"
        },
        "version": {
          "type": "string",
          "$ref": "defs.json#/definitions/version"
        }
      }
    },
    "game": {
      "$id": "games",
      "type": "array",
      "items": {
        "$id": "game",
        "type": "object",
        "properties": {
          "name": {
            "description": "Name of the game",
            "type": "string"
          },
          "id": {
            "description": "ID of the game. Must be unique per system.",
            "type": "string"
          },
          "description": {
            "description": "Description of the game",
            "type": "string"
          },
          "rom": {
            "type": "array",
            "items": {
              "$ref": "games_db.json#/definitions/rom"
            }
          },
          "manufacturer": {
            "description": "Manufacturer of the game",
            "type": "string"
          },
          "year": {
            "description": "Year of the game",
            "oneOf": [
              {
                "type": "number"
              },
              {
                "type": "string"
              }
            ]
          },
          "links": {
            "$ref": "defs.json#/definitions/links"
          }
        },
        "required": [
          "@name",
          "@id",
          "size",
          "sha1"
        ]
      }
    }
  },
  "definitions": {
    "rom": {
      "type": "object",
      "properties": {
        "@name": {
          "description": "Name of the ROM",
          "type": "string"
        },
        "@size": {
          "description": "Size of the ROM, in bytes",
          "type": "number"
        },
        "@sha1": {
          "description": "SHA1 of the ROM",
          "type": "string"
        }
      },
      "required": [
        "@name",
        "@size",
        "@sha1"
      ]
    }
  },
  "required": [
    "game"
  ]
}
