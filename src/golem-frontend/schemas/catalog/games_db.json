{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://1fpga.cloud/schemas/games_db.json",
  "type": "object",
  "properties": {
    "games": {
      "$id": "games",
      "type": "array",
      "items": {
        "$id": "game",
        "type": "object",
        "properties": {
          "name": {
            "description": "Name of the game",
            "type": "string"
          },
          "number": {
            "description": "Unique ID of the game. Must be unique per system.",
            "oneOf": [
              {
                "type": "number"
              },
              {
                "type": "string"
              }
            ]
          },
          "region": {
            "description": "Region of the game",
            "type": "string"
          },
          "languages": {
            "description": "Languages of the game, either as an array or a single string.",
            "oneOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          },
          "description": {
            "description": "Description of the game",
            "type": "string"
          },
          "manufacturer": {
            "description": "Manufacturer of the game",
            "type": "string"
          },
          "year": {
            "description": "Year of the game",
            "oneOf": [
              {
                "type": "number"
              },
              {
                "type": "string"
              }
            ]
          },
          "links": {
            "$ref": "defs.json#/definitions/links"
          },
          "sources": {
            "$id": "sources",
            "type": "array",
            "items": {
              "$ref": "games_db.json#/definitions/source"
            }
          }
        },
        "required": ["name", "number", "sources"]
      }
    }
  },
  "definitions": {
    "source": {
      "$id": "source",
      "type": "object",
      "properties": {
        "files": {
          "$id": "files",
          "description": "ROM sources",
          "type": "array",
          "items": {
            "$ref": "games_db.json#/definitions/file"
          }
        }
      }
    },
    "file": {
      "$id": "file",
      "type": "object",
      "properties": {
        "id": {
          "description": "Unique ID of the file. Must be unique per game.",
          "type": "number"
        },
        "extension": {
          "description": "File extension",
          "type": "string"
        },
        "size": {
          "description": "File size in bytes",
          "type": "number"
        },
        "crc32": {
          "description": "CRC32 checksum of the file",
          "type": "string"
        },
        "md5": {
          "description": "MD5 checksum of the file",
          "type": "string"
        },
        "sha1": {
          "description": "SHA-1 checksum of the file",
          "type": "string"
        },
        "sha256": {
          "description": "SHA-256 checksum of the file",
          "type": "string"
        }
      },
      "required": ["id", "extension", "size", "sha1"]
    }
  },
  "required": ["game"]
}
