{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://1fpga.cloud/schemas/releases.json",
  "description": "A list of all systems and their definition files.",
  "type": "object",
  "additionalProperties": {
    "$id": "binary",
    "type": "array",
    "items": {
      "$id": "release",
      "type": "object",
      "properties": {
        "version": {
          "description": "Version of the system metadata",
          "$ref": "defs.json#/definitions/version"
        },
        "tags": {
          "description": "List of tags for the release",
          "type": "array",
          "items": {
            "$ref": "defs.json#/definitions/tag"
          }
        },
        "files": {
          "description": "List of files in the release",
          "$id": "files",
          "type": "array",
          "items": {
            "$id": "file",
            "type": "object",
            "properties": {
              "url": {
                "description": "URL of the file",
                "type": "string",
                "format": "uri-reference"
              },
              "signature": {
                "description": "Signature of the file, in base64.",
                "type": "string",
                "format": "byte"
              },
              "sha256": {
                "description": "SHA256 of the file",
                "type": "string"
              },
              "size": {
                "description": "Size of the file",
                "type": "integer"
              }
            },
            "required": [
              "url",
              "sha256",
              "size"
            ]
          }
        }
      },
      "required": [
        "version",
        "files"
      ]
    }
  }
}
