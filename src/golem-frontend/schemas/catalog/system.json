{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://1fpga.cloud/schemas/system.json",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the system",
      "type": "string"
    },
    "uniqueName": {
      "description": "Unique short name of the system",
      "type": "string"
    },
    "description": {
      "description": "Description of the system",
      "type": "string"
    },
    "gamesDb": {
      "description": "List of games supported by the system",
      "$ref": "#/definitions/gamesDb"
    },
    "cores": {
      "description": "List of cores for the system",
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/core"
      }
    },
    "links": {
      "$ref": "defs.json#/definitions/links"
    }
  },
  "required": [
    "name",
    "uniqueName"
  ],
  "definitions": {
    "gamesDb": {
      "type": "object",
      "properties": {
        "url": {
          "description": "URL of the game database",
          "type": "string",
          "format": "uri"
        },
        "description": {
          "description": "Description of the game",
          "type": "string"
        },
        "size": {
          "description": "Size of the game database, in bytes",
          "type": "number"
        },
        "sha1": {
          "description": "SHA1 of the game database",
          "type": "string"
        },
        "date": {
          "description": "Date of the game database",
          "type": "string"
        },
        "links": {
          "$ref": "defs.json#/definitions/links"
        }
      },
      "required": [
        "url",
        "size",
        "sha1",
        "date"
      ]
    },
    "core": {
      "type": "object",
      "properties": {
        "version": {
          "description": "Version of the core",
          "$ref": "defs.json#/definitions/version"
        },
        "links": {
          "$ref": "defs.json#/definitions/links"
        },
        "url": {
          "description": "URL of the core",
          "type": "string",
          "format": "uri"
        }
      },
      "required": [
        "version",
        "url"
      ]
    },
    "system": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the system",
          "type": "string"
        },
        "uniqueName": {
          "description": "Unique short name of the system",
          "type": "string"
        },
        "description": {
          "description": "Description of the system",
          "type": "string"
        },
        "gamesDb": {
          "description": "List of games supported by the system",
          "$ref": "#/definitions/gamesDb"
        },
        "cores": {
          "description": "List of cores for the system",
          "$ref": "#/definitions/core"
        },
        "version": {
          "description": "Version of the core",
          "type": "string"
        },
        "links": {
          "$ref": "defs.json#/definitions/links"
        }
      },
      "required": [
        "uniqueName",
        "name",
        "version",
        "downloadUrl"
      ]
    }
  }
}
