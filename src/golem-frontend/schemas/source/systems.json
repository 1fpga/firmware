{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://1fpga.cloud/schemas/systems.json",
  "type": "object",
  "additionalProperties": {
    "$comment": "A map of system unique short names to system descriptions.",
    "$ref": "#/definitions/system"
  },
  "definitions": {
    "game_db": {
      "type": "object",
      "properties": {
        "url": {
          "description": "URL of the game database",
          "type": "string"
        },
        "description": {
          "description": "Description of the game",
          "type": "string"
        },
        "size": {
          "description": "Size of the game database, in bytes",
          "type": "number"
        },
        "sha1": {
          "description": "SHA1 of the game database",
          "type": "string"
        },
        "date": {
          "description": "Date of the game database",
          "type": "string"
        },
        "links": {
          "$ref": "defs.json#/definitions/links"
        }
      },
      "required": [
        "url",
        "size",
        "sha1",
        "date"
      ]
    },
    "core": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the core",
          "type": "string"
        },
        "version": {
          "description": "Version of the core",
          "type": "string"
        },
        "links": {
          "$ref": "defs.json#/definitions/links"
        },
        "releases": {
          "description": "List of releases for the core",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "files": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "date": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "system": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Name of the system",
          "type": "string"
        },
        "description": {
          "description": "Description of the system",
          "type": "string"
        },
        "games_db": {
          "description": "List of games supported by the system",
          "$ref": "#/definitions/game_db"
        },
        "core": {
          "description": "List of cores for the system",
          "$ref": "#/definitions/core"
        },
        "version": {
          "description": "Version of the core",
          "type": "string"
        },
        "links": {
          "$ref": "defs.json#/definitions/links"
        }
      },
      "required": [
        "uniqueName",
        "name",
        "version",
        "downloadUrl"
      ]
    }
  }
}
