{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "outDir": "dist",
    "rootDirs": ["src", "codegen"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "paths": {
      "$/*": ["src/*"],
      "$schemas:*": ["codegen/schemas/*"],
      "@:*": ["types/*"]
    }
  }
}
