{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "outDir": "dist",
    "rootDirs": [
      "src",
      "codegen"
    ],
    "lib": [
    ],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "paths": {
      "$/*": [
        "src/*"
      ],
      "$schemas:*": [
        "codegen/schemas/*"
      ],
      "$schemas-json:*": [
        "schemas/*"
      ],
      "@:*": [
        "types/*"
      ]
    },
    "types": [
      "./types/globals.d.ts"
    ]
  }
}
