{
  "compilerOptions": {
    "target": "ESNext",
    "baseUrl": ".",
    "module": "ESNext",
    "outDir": "dist",
    "rootDirs": [
      "src"
    ],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Bundler",
    "paths": {
      "$schemas:Source": [
        "ajv-build-tools/types"
      ],
      "@/*": [
        "types/*"
      ]
    }
  }
}
